<%# 検索キーワードいれたり OGP 込み細かく metatag 設定 %>
<% set_meta_tags title: 'タベルバム | 検索結果' %>
<h1>検索結果</h1>
<%= form_with(url: meals_path, method: :get, local: true) do |f| %>
  <div class="input-group mb-3">
    <%= f.text_field :keyword, value: @search_params[:keyword], placeholder: 'キーワード', class:'form-control' %>
      <%= f.submit '検索', class: 'btn btn-outline-secondary'  %>
  </div>
<% end %>
<div class="row">
  <% @meals.each do |meal| %>
    <div class="col-xs-12 col-md-4 mb-3">
      <%= render partial: 'commons/meal_card', locals: { meal: meal }%>
    </div>
  <% end %>
</div>
